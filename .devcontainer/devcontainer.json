{
  "name": "Grengin API",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "stable",
      "profile": "default"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "serayuzgur.crates",
        "vadimcn.vscode-lldb",
        "usernamehw.errorlens"
      ],
      "settings": {
        "rust-analyzer.checkOnSave.command": "clippy",
        "editor.formatOnSave": true,
        "[rust]": {
          "editor.defaultFormatter": "rust-lang.rust-analyzer"
        }
      }
    }
  },
  "forwardPorts": [8080, 5432],
  "portsAttributes": {
    "8080": {
      "label": "API Server",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },
  "onCreateCommand": "sudo chown -R vscode:vscode /workspace/target /home/vscode/.cargo/registry 2>/dev/null || true",
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "containerEnv": {
    "DATABASE_URL": "postgres://grengin:grengin@db:5432/grengin",
    "JWT_SECRET": "dev-jwt-secret-change-in-production",
    "REDIRECT_URL": "http://localhost:3000",
    "GOOGLE_CLIENT_ID": "",
    "GOOGLE_CLIENT_SECRET": "",
    "AZURE_TENANT_ID": "",
    "AZURE_CLIENT_ID": "",
    "AZURE_CLIENT_SECRET": "",
    "HOST": "0.0.0.0",
    "PORT": "8080",
    "SWAGGER_UI_OVERWRITE_FOLDER": "/workspace/swagger-overrides"
  },
  "remoteUser": "vscode"
}
